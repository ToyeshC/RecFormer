#!/bin/bash
#SBATCH --job-name=mini_test
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=1
#SBATCH --cpus-per-task=18
#SBATCH --gpus-per-node=1
#SBATCH --mem=120G
#SBATCH --time=00:30:00
#SBATCH --partition=gpu_a100
#SBATCH --output=job_output/run_mini_test_%j.out

set -e # Exit immediately if a command exits with a non-zero status.

module purge
module load 2024
module load Anaconda3/2024.06-1

# Activate virtual environment
source recformer_env/bin/activate

# --- Define paths ---
MINI_DATA_INPUT_PATH="datasets/mind_mini"
MINI_DATA_OUTPUT_PATH="downstream_datasets/MIND_mini_json"

echo "Starting mini-dataset test..."

# --- Step 1: Process the mini-dataset ---
echo "Processing the mini MIND dataset into JSON format..."

# Check if the mini dataset exists
if [ ! -d "$MINI_DATA_INPUT_PATH" ]; then
    echo "Error: Mini dataset not found at $MINI_DATA_INPUT_PATH"
    echo "Please run python_scripts/create_mini_dataset.py first."
    exit 1
fi

python python_scripts/process_mind.py \
    --input_path "$MINI_DATA_INPUT_PATH" \
    --output_path "$MINI_DATA_OUTPUT_PATH"

if [ $? -ne 0 ]; then
    echo "Data processing for mini dataset failed. Exiting."
    exit 1
fi

echo "Mini-dataset processing complete."

# --- Step 2: Run RecFormer fine-tuning on the mini-dataset ---
echo "Starting RecFormer fine-tuning using the mini-dataset..."

python python_scripts/finetune.py \
    --pretrain_ckpt pretrained_models/recformer_seqrec_ckpt.bin \
    --data_path "$MINI_DATA_OUTPUT_PATH" \
    --num_train_epochs 1 \
    --batch_size 8 \
    --fp16 \
    --finetune_negative_sample_size -1 \
    --verbose 1

echo "Job finished." 